{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src//*", "src/World/WorldManager.ts", "src/Components/Cadre/Card.ts", "src/Components/Cadre/CadreManager.ts", "src/Components/Cadre/Urls.ts", "src/Components/Products/ProductStore.ts", "src/Components/Products/VerticalProducts.tsx", "src/ClientApp/AppStore.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
